<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:background="#F2F5F6">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/intro1"
        android:layout_marginTop="10dp"/>

    <telegramplus.CustomTextview
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:gravity="center"
        android:text="@string/AppName"
        android:textSize="25dp"
        android:textStyle="bold"
        android:textColor="#6F7071"
        android:id="@+id/txthasti" />

    <telegramplus.CustomTextview
        android:id="@+id/txtver"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:gravity="center"
        android:text="ورژن 1.0.2"
        android:textSize="15dp"
        android:textColor="#ff0033"
        />
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
      >

        <android.support.v7.widget.CardView
            android:layout_width="50dp"
            android:layout_height="50dp"

            app:cardBackgroundColor="#ffffff"
            app:cardCornerRadius="25dp"
            app:cardElevation="5dp"
            android:layout_margin="15dp">

            <ImageView
                android:id="@+id/contact_us_button"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/about_title_contact_us"
                android:src="@drawable/ic_telegram_logo"
                android:scaleType="centerInside"/>


        </android.support.v7.widget.CardView>


        <android.support.v7.widget.CardView
            android:layout_width="50dp"
            android:layout_height="50dp"

            app:cardBackgroundColor="#ffffff"
            app:cardCornerRadius="25dp"
            app:cardElevation="5dp"

            android:layout_margin="15dp">

            <ImageView
                android:id="@+id/our_channel"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/about_title_contact_us"
                android:src="@drawable/ic__broadcast"
                android:scaleType="centerInside"/>


        </android.support.v7.widget.CardView>




    </LinearLayout>

    <android.support.v7.widget.CardView
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        app:cardBackgroundColor="#ffffff"
        app:cardCornerRadius="3dp"
        app:cardElevation="5dp"
        android:layout_gravity="bottom">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center|right"
            android:orientation="vertical"
            android:paddingBottom="5dp"
            android:paddingTop="5dp">


            <TextView
                android:id="@+id/txtcontent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:text="@string/about_title_contact_us_message" />

        </LinearLayout>


    </android.support.v7.widget.CardView>





</LinearLayout>